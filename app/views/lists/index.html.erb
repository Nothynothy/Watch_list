<div class='banner'>
  <div class='container'>
    <h1><strong>Watch list</strong></h1>
    <h2>Categories</h2>
  </div>
</div>


<div class='grid-cat'>
  <% @lists.each do |list| %>
    <div
      class='category-card'
      style="background-image: linear-gradient(rgba(0,0,0,0.3),
            rgba(0,0,0,0.3)),
            url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')"
    >
      <h3><%= link_to list.name, list_path(list), class: 'text-color' %></h3>
    </div>
  <% end %>
</div>

<br>
<div class='btn-add'>
  <%= link_to 'Add a new list', new_list_path, class: "btn-flat" %>
</div>

<hr><br>
<div class=movie-title><h2><strong>Movie list</strong></h2></div>
<br>

<div class='grid'>
  <%# <div class="col-12 col-md-6 col-lg-4"> %>
  <% @movies.each do |movie| %>
    <div class='movie-card'>
      <div class="movie-img" style="border-radius: 5px" ><%= image_tag "#{movie.poster_url}" %></div>
      <div class='movie-text'><h3><%= movie.title %>  (<%= movie.rating %>/10)</h3></div>
    </div>
    <%# </div> %>
    <% end %>
</div>
