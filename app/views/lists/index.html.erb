<h2><strong>Category list</strong></h2>

<div><% @lists.each do |list| %>
    <h3><%= link_to list.name, list_path(list) %></h3>
    <% end %>
</div>

<hr><br>
<h2><strong>Movie list</strong></h2>
<br>


<div><% @movies.each do |movie| %>
    <h3><%= movie.title %></h3>
    <p><%= image_tag "#{movie.poster_url}" %></p>
    <br><br><br>
    <% end %>
</div>

<p><%= link_to 'Add your list', new_list_path %></p>
